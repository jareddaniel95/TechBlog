<section>
    <header>
        <h1>Edit post</h1>
    </header>
    <section class="editor">
        <input type="hidden" name="post-id" value="{{post.id}}" />
        <section>
            <input name="title" class="post-title" value="{{post.post_title}}" />
        </section>
        <section>
            <textarea name="content" class="post-editor">{{post.post_content}}</textarea>
        </section>
        <section>
            <button id="submit-post">Submit</button>
        </section>
    </section>
</section>

<script src="/js/edit-post.js"></script>